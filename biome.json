{
  "formatter": {
    "indentStyle": "space",
    "indentWidth": 2,
    "ignore": ["node_modules", "dist", "bun.lockb"]
  },
  "javascript": {
    "formatter": {
      "semicolons": "asNeeded",
      "quoteStyle": "single",
      "jsxQuoteStyle": "single",
      "trailingComma": "none"
    }
  },
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "style": {
        "noParameterAssign": "off"
      },
      "suspicious": {
        "noArrayIndexKey": "off"
      },
      "recommended": true
    },
    "ignore": ["node_modules", "dist", "bun.lockb"]
  }
}
